<h1>Create a new user!</h1>
<%= form_for @user do |u| %>
	<%= u.label :username, "Username: " %>
	<%= u.text_field :username%> <br/>
	<%= u.label :email, "Email: " %>
	<%= u.text_field :email %> <br/>
	<%= u.label :password, "Password: " %>
	<%= u.password_field :password %> <br/>
	<%= u.submit %>
<% end %>














