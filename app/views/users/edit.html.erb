<% if @user.errors.any? %>
	<p>There were a few errors with your submission: </p>
	<ul>
	<% @user.errors.full_messages.each do |msg| %>
	<li> <%= msg %> </li>
	<% end %>
	</ul>
<% end %>

<h1>Update your user!</h1>
<%= form_for @user, method: :patch do |u| %>
	Username: <%= u.text_field :username%> <br>
	Email:    <%= u.text_field :email %> <br>
	Password: <%= u.password_field :password %> <br>
	<%= u.submit %>
<% end %>

